{
  "title": "Neil Hyper Layer (CapsLock)",
  "version": 1,
  "author": "Neil",
  "rules": [
    {
      "description": "CapsLock to Hyper",
      "manipulators": [
        {
          "description": "CapsLock = Hyper (RightShift+RightCtrl+RightOpt)",
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_shift",
              "modifiers": [
                "right_control",
                "right_option"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Hyper Navigation + Editing",
      "manipulators": [
        {
          "description": "Hyper+j = Left",
          "type": "basic",
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ]
        },
        {
          "description": "Hyper+k = Down",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ]
        },
        {
          "description": "Hyper+l = Right",
          "type": "basic",
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ]
        },
        {
          "description": "Hyper+i = Up",
          "type": "basic",
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ]
        },
        {
          "description": "Hyper+u = Beginning of line (Cmd+Left)",
          "type": "basic",
          "from": {
            "key_code": "u",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "Hyper+o = End of line (Cmd+Right)",
          "type": "basic",
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_command"
              ]
            }
          ]
        },
        {
          "description": "Hyper+; = Delete forward",
          "type": "basic",
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_forward"
            }
          ]
        },
        {
          "description": "Hyper+' = Backspace",
          "type": "basic",
          "from": {
            "key_code": "quote",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ]
        },
        {
          "description": "Hyper+Shift+k = Ctrl+k (kill line)",
          "type": "basic",
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "k",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Hyper macOS Spaces",
      "manipulators": [
        {
          "description": "Hyper+[ = Space Left (Ctrl+Left)",
          "type": "basic",
          "from": {
            "key_code": "open_bracket",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        },
        {
          "description": "Hyper+] = Space Right (Ctrl+Right)",
          "type": "basic",
          "from": {
            "key_code": "close_bracket",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_control"
              ]
            }
          ]
        }
      ]
    },
    {
      "description": "Hyper iTerm pane focus (WASD)",
      "manipulators": [
        {
          "description": "Hyper+w = iTerm pane up (Cmd+Opt+Up)",
          "type": "basic",
          "from": {
            "key_code": "w",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ]
        },
        {
          "description": "Hyper+a = iTerm pane left (Cmd+Opt+Left)",
          "type": "basic",
          "from": {
            "key_code": "a",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ]
        },
        {
          "description": "Hyper+s = iTerm pane down (Cmd+Opt+Down)",
          "type": "basic",
          "from": {
            "key_code": "s",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ]
        },
        {
          "description": "Hyper+d = iTerm pane right (Cmd+Opt+Right)",
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "right_shift",
                "right_control",
                "right_option"
              ]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": [
                "left_command",
                "left_option"
              ]
            }
          ]
        }
      ]
    }
  ]
}
